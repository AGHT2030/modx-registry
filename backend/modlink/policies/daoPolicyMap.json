{
    "FinanceDAO": {
        "description": "Handles MODUSD, INTI, investments, and wrapping operations",
        "policies": [
            "KYC",
            "AML",
            "AccreditedInvestorCheck"
        ],
        "requiredScopes": [
            "finance:read",
            "finance:trade",
            "invest:execute"
        ],
        "encryption": "AES-256-GCM"
    },
    "HealthDAO": {
        "description": "Wellness, DreamState, and cognitive data governance (MODH)",
        "policies": [
            "HIPAA",
            "UserConsent",
            "DataRetention"
        ],
        "requiredScopes": [
            "health:read",
            "health:reflect"
        ],
        "encryption": "AES-256-GCM"
    },
    "EventsDAO": {
        "description": "MODE event planning and immersive scheduling",
        "policies": [
            "VerifiedPartner",
            "EventLiability"
        ],
        "requiredScopes": [
            "events:read",
            "events:create"
        ]
    },
    "EntertainmentDAO": {
        "description": "MODPLAY and CreaTV creative content operations",
        "policies": [
            "AgeCheck",
            "ContentSafety",
            "RoyaltyRights"
        ],
        "requiredScopes": [
            "media:stream",
            "media:create"
        ]
    },
    "HospitalityDAO": {
        "description": "MODA Stay, guest rooms, and immersive hotel experiences",
        "policies": [
            "GuestAccess",
            "IdentityMatch",
            "PaymentAuth"
        ],
        "requiredScopes": [
            "stay:book",
            "stay:checkout"
        ]
    },
    "MuseumDAO": {
        "description": "MODA Museum membership and NFT-based curation",
        "policies": [
            "MemberAccess",
            "SponsorDisclosure"
        ],
        "requiredScopes": [
            "museum:view",
            "museum:curate"
        ]
    },
    "PublicDAO": {
        "description": "General users not yet assigned to a specific DAO",
        "policies": [
            "BasicAccess"
        ],
        "requiredScopes": [
            "read:public"
        ]
    }
}