{
    "module": "KZ-Oversight-Integrity-Shield",
    "version": "1.0.0",
    "mode": "A1-governance-observable",
    "constitution_alignment": true,
    "risk_levels": {
        "low": [
            "routine-transfers",
            "ETF-balancing",
            "governance-polls"
        ],
        "moderate": [
            "stablecoin-migrations",
            "bridge-activity",
            "staking-unlocks"
        ],
        "high": [
            "reserves-mismatch",
            "treasury-depletion",
            "gov-collisions"
        ],
        "critical": [
            "unauthorized-mint",
            "unauthorized-burn",
            "AI manipulation attempt",
            "human override attempt"
        ]
    },
    "actions": {
        "on_moderate": "notify-Oversight-Board-and-log",
        "on_high": "freeze-affected-subsystem",
        "on_critical": "activate-KZ-RedShield",
        "redshield_policy": "AI-takes-temporary-control-until-human-review"
    },
    "reversal_rules": {
        "inti": "treasury-auto-return",
        "modusd_family": "stability-protected-return",
        "etf_family": "basket-safeguard-return",
        "infra_tokens": "quarantine-and-review"
    },
    "oversight_human_review_required_for": [
        "critical-governance-proposals",
        "override-requests",
        "revocations-of-constitution-clauses",
        "DAO-emergency-actions"
    ],
    "ai_self_audit": {
        "enabled": true,
        "interval_seconds": 300,
        "checks": [
            "logic-consistency",
            "unusual-request-pattern",
            "external-AI-contact-attempt",
            "bridge-anomaly-scan",
            "oversight-behavior-audit"
        ]
    }
}